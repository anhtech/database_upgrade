<odoo>
    <data>
        <record id="payment_schedule_form" model="ir.ui.view">
            <field name="name">payment.schedule.form</field>
            <field name="model">payment.schedule</field>
            <field name="arch" type="xml">
                <form string="Payment Scheduler">
                    <sheet>
                        <group>
                            <div>
                                <label for="month" string="Month" style="font-weight: bold !important;margin-right:107px;margin-left: 0px;"/>
                                <field name="month" style="width:110px"/>
                                <field name="year" style="width:110px;margin-left: 34px;"/>
                            </div>
                        </group>
                        <group>
                            <field name="payment_date"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>