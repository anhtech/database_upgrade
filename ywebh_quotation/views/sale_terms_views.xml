<odoo>
  <data>
    <record id="sale_terms_form" model="ir.ui.view">
        <field name="name">sale.terms.form</field>
        <field name="model">sale.terms</field>
        <field name="arch" type="xml">
            <form string="Sales Terms">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="terms_html"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
  </data>
</odoo>